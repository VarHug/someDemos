html, body
  width 100%
  height 100%
  background-color #222
.root
  width 100%
  height 100%
.stage
  position relative
  width 100%
  height 100%
  .img-sec
    position relative
    width 100%
    height 100%
    overflow hidden
    background-color #ddd
    /.stage .img-figure
      position absolute
      width 280px
      height 420px
      padding 40px
      box-sizing border-box
      background-color #fff
      .img-title
        text-align center
        margin-top 20px
        font-size 20px
        font-weight 700
        color #a7a0a2
  .controller-nav
    position absolute
    left 0
    bottom 30px
    width 100%
    text-align center
    z-index 100
