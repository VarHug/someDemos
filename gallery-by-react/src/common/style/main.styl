html, body
  width 100%
  height 100%
  background-color #222
.root
  width 100%
  height 100%
.stage
  position relative
  width 100%
  height 100%
  .img-sec
    position relative
    width 100%
    height 100%
    overflow hidden
    background-color #ddd
    /.stage .img-figure
      position absolute
      width 280px
      height 420px
      padding 40px
      box-sizing border-box
      background-color #fff
      cursor pointer
      transform-style preserve-3d
      perspective 600px
      &.is-inverse
        transform rotateY(180deg)
      .img-title
        text-align center
        margin-top 20px
        font-size 20px
        font-weight 700
        color #a7a0a2
      .img-back
        position absolute
        padding 30px
        left 0
        top 0
        width 100%
        height 100%
        box-sizing border-box
        text-align center
        font-size 20px
        color #666
        background #ffffff
        transform rotateY(180deg)
  .controller-nav
    position absolute
    left 0
    bottom 30px
    width 100%
    text-align center
    z-index 100
